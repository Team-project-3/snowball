package spider;

import static org.junit.Assert.*;

import java.io.File;
import java.io.IOException;

import org.junit.After;
import org.junit.Before;
import org.junit.Ignore;
import org.junit.Test;

public class SpiderTest {

	private static Spider spider = new Spider();
	
	@Before
	public void setUp() throws Exception {
		spider.code = "SZ002353";
		System.out.println(System.getProperty("user.dir"));
		File src = new File("评论\\"+spider.code);
		if(src.exists()) {
			File dest = new File(".\\评论\\"+spider.code+"(2)");
			src.renameTo(dest);
			System.out.println("做一些前提条件的设置");
		}
	}

	@After
	public void tearDown() throws Exception {
		File f=new File("评论\\"+spider.code);
		f.delete();
		File src = new File(".\\评论\\"+spider.code+"(2)");
		if(src.exists()) {
			File dest = new File(".\\评论\\"+spider.code);
			src.renameTo(dest);
			System.out.println("释放一些资源");
		}
	}


	@Test
	//@Ignore
	public void testRun() throws IOException, InterruptedException {
		spider.run();
		assertEquals(1, spider.getResult());
	}

	//@Test
	@Ignore
	public void testCheck() throws IOException {
		spider.check();
		assertEquals(0, spider.getCheck());
	}

}
