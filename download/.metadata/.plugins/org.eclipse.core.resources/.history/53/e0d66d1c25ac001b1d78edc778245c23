package spider;

import static org.junit.Assert.*;

import java.io.File;
import java.io.IOException;

import org.junit.After;
import org.junit.Before;
import org.junit.Ignore;
import org.junit.Test;

public class SpiderTest {

	private static Spider spider = new Spider();
	
	@Before
	public void setUp() throws Exception {
		spider.code = "SZ002353";
		File src = new File("./评论/"+spider.code+".xls");
		if(src.exists()) {
			File dest = new File("./评论/"+spider.code+"(2).xls");
			src.renameTo(dest);
		}
	}

	@After
	public void tearDown() throws Exception {
		File f=new File("./评论/"+spider.code+".xls");
		f.delete();
		File src = new File("./评论/"+spider.code+"(2).xls");
		if(src.exists()) {
			File dest = new File("./评论/"+spider.code+".xls");
			src.renameTo(dest);
		}
	}


	@Test
	//@Ignore
	public void testRun() throws IOException, InterruptedException {
		spider.run();
		assertEquals(1, spider.getResult());
	}

	//@Test
	@Ignore
	public void testCheck() throws IOException {
		spider.check();
		assertEquals(0, spider.getCheck());
	}

}
